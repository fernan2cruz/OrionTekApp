@page
@model OrionTek.Pages.Clients.OrganizacionClientsModel

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes de la Organizacion @Model.Organization.Name</h1>

<p>
    <a asp-page="CreateClientInOrganization" asp-route-guid ="@Model.Organization.Id">Agregar Nuevo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].BirthDay)
            </th>
            <th>
                Cantidad de Direcciones
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Clients) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDay)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Addresses.Count)
            </td> 
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>  |
                <a asp-page="/Clients/Index" asp-route-id="@item.Id">Ver Clientes</a> 
            </td>
        </tr>
}
    </tbody>
</table>
